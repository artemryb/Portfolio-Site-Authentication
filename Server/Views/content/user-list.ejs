<div class="container">
    <h1>User List</h1>

    <div class="row">
        <div class="col">

            <a href="/user/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add User</a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Display name</th>
                        <th scope="col">Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="userList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < users.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= users[count].username %></td>
                            <td><%= users[count].DisplayName %></td>
                            <td><%= users[count].EmailAddress %></td>
                            <td class="text-center"><a href="/user/edit/<%= users[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                            <td class="text-center"><a href="/user/delete/<%= users[count]._id %>" class="btn btn-danger btn-sm delete" data-redirect="user-list"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>